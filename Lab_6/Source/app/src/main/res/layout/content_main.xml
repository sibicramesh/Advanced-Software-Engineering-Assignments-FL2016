<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sibi.mapapplication.MainActivity">

    <TextView
        android:text="Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignStart="@+id/textView4"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:gravity="center"
        android:layout_alignEnd="@+id/textView4"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:layout_alignTop="@+id/address_txt"
        android:layout_alignBottom="@+id/address_txt" /><![CDATA[


        //android:background="@drawable/edittext1"
        android:textColor="@color/colorAccent" />







    ]]>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/thumb"
        android:id="@+id/imageView2"
        android:layout_marginTop="100dp"

        android:layout_toStartOf="@+id/editText" />

    <TextView
        android:text="Last Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/editText3"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:text="Sign-Up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"

        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorLink="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        tools:textColor="@color/colorAccent"
        android:background="@drawable/edittext1"
        android:layout_below="@+id/button6"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginBottom="10dp"
        android:textColorLink="#FFFFFF"
        android:textColor="#FFFFFF"
        android:paddingLeft="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="First Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:gravity="center"
        android:onClick="onClickOfPhotoButton"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Username:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/editText5"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:textColor="#FFFFFF"
        android:background="@drawable/edittext1"
        android:layout_below="@+id/editText"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColorLink="#FFFFFF"
        android:paddingLeft="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/address_txt"
        android:hint="Auto-fill after 10 secs"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:background="@drawable/edittext1"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColorLink="#FFFFFF"
        android:paddingLeft="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText5"
        android:textColor="#FFFFFF"
        android:background="@drawable/edittext1"
        android:layout_below="@+id/address_txt"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColorLink="#FFFFFF"
        android:paddingLeft="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText6"
        android:textColor="#FFFFFF"
        android:background="@drawable/edittext1"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColorLink="#FFFFFF"
        android:paddingLeft="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:autoText="false"
        android:layout_centerInParent="false"
        android:layout_alignWithParentIfMissing="false"
        android:textAlignment="textStart"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/editText6"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Take Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button
        android:text="Go to Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
